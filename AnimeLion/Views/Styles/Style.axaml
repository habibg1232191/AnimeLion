    <Style Selector="Grid.SideBar StackPanel Viewbox">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0 0 0 8"/>
    </Style>
    
    <Style Selector="Grid.SideBar StackPanel Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="48"/>
    </Style>
    
    <!-- <Style Selector="Grid.SideBar StackPanel Border:pointerover"> -->
    <!--     <Setter Property="Background" Value="#434343"/> -->
    <!-- </Style> -->
    
    <Style Selector="Grid.SideBar StackPanel RadioButton">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
        
        <Setter Property="Template">
            <ControlTemplate>
                <ContentPresenter Name="PART_ContentPresenter"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"/>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="Grid.SideBar StackPanel RadioButton custom|RippleEffect">
        <Setter Property="RippleFill" Value="#000"/>
        <Setter Property="RippleOpacity" Value="0.1"/>
    </Style>
    
    <Style Selector="Grid.SideBar StackPanel RadioButton:checked Path">
        <Setter Property="Fill" Value="#08004e"/>
    </Style>
    
    <Style Selector="Grid.TitleBarIcon,Grid.TitleBarIconClose">
        <Setter Property="Background" Value="#ff636363"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.08"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Grid.TitleBarIconClose:pointerover">
        <Setter Property="Background" Value="#ff3636"/>
    </Style>
    
    <Style Selector="Grid.TitleBarIcon:pointerover">
        <Setter Property="Background" Value="#747474"/>
    </Style>
    
    <Style Selector="Grid.TitleBarIcon Viewbox">
        <Setter Property="Width" Value="18"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Margin" Value="5 0 10 0"/>
    </Style>
    
    <Style Selector="Grid.TitleBarIcon Viewbox Path">
        <Setter Property="Margin" Value="0 "/>
    </Style>
</Styles>
